@startuml
'https://plantuml.com/sequence-diagram
!include style.puml
skinparam ArrowFontStyle plain

box Logic LOGIC_COLOR_T1
participant ":LogicManager" as LogicManager LOGIC_COLOR
participant ":InventoryAppParser" as InventoryAppParser LOGIC_COLOR
participant "l:ListCommand" as ListCommand LOGIC_COLOR
participant ":CommandResult" as CommandResult LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant ":Model" as Model MODEL_COLOR
end box

[-> LogicManager : execute("list")
activate LogicManager

LogicManager -> InventoryAppParser : parseCommand("list")
activate InventoryAppParser

create ListCommand
InventoryAppParser -> ListCommand
activate ListCommand

ListCommand --> InventoryAppParser : l
deactivate ListCommand

InventoryAppParser --> LogicManager : l
deactivate InventoryAppParser

LogicManager -> ListCommand : execute()
activate ListCommand

ListCommand -> Model : updateFilteredRecipeList
activate Model

Model --> ListCommand
deactivate Model

create CommandResult
ListCommand -> CommandResult
activate CommandResult

CommandResult --> ListCommand
deactivate CommandResult

ListCommand --> LogicManager : result
deactivate ListCommand

[<--LogicManager
deactivate LogicManager
@enduml
